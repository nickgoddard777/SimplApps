<%= form_for @page do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :page_type %><br />
    <%= f.text_field :page_type %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.cktext_area :content, :toolbar=>"Full" %>
  </p>
  <p>
    <%= f.label :keywords %><br />
    <%= f.text_field :keywords %>
  </p>
  <p><%= f.submit %></p>
<% end %>

